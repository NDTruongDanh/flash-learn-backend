  "components": {
    "schemas": {
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "USER",
              "ADMIN"
            ]
          }
        }
      },
      "CreateDeckDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "title"
        ]
      },
      "UpdateDeckDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "CreateCardDto": {
        "type": "object",
        "properties": {
          "deckId": {
            "type": "number"
          },
          "front": {
            "type": "string"
          },
          "back": {
            "type": "string"
          },
          "tags": {
            "type": "string"
          }
        },
        "required": [
          "deckId",
          "front",
          "back",
          "tags"
        ]
      },
      "UpdateCardDto": {
        "type": "object",
        "properties": {
          "front": {
            "type": "string"
          },
          "back": {
            "type": "string"
          },
          "tags": {
            "type": "string"
          }
        }
      },
      "SignUpDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "confirmPassword": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "email",
          "password",
          "confirmPassword"
        ]
      },
      "AuthResponseDto": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "id": {
            "type": "number"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string"
          },
          "lastLoginAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "accessToken",
          "id",
          "username",
          "email",
          "role",
          "createdAt",
          "lastLoginAt"
        ]
      },
      "SignInDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "ReviewPreviewDto": {
        "type": "object",
        "properties": {
          "Again": {
            "type": "string",
            "example": "1 day",
            "description": "Interval if reviewed as Again"
          },
          "Hard": {
            "type": "string",
            "example": "6 days",
            "description": "Interval if reviewed as Hard"
          },
          "Good": {
            "type": "string",
            "example": "10 days",
            "description": "Interval if reviewed as Good"
          },
          "Easy": {
            "type": "string",
            "example": "14 days",
            "description": "Interval if reviewed as Easy"
          }
        },
        "required": [
          "Again",
          "Hard",
          "Good",
          "Easy"
        ]
      },
      "SubmitReviewItemDto": {
        "type": "object",
        "properties": {
          "cardId": {
            "type": "number"
          },
          "quality": {
            "type": "string",
            "enum": [
              "Again",
              "Hard",
              "Good",
              "Easy"
            ]
          }
        },
        "required": [
          "cardId",
          "quality"
        ]
      },
      "SubmitReviewDto": {
        "type": "object",
        "properties": {
          "CardReviews": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubmitReviewItemDto"
            }
          },
          "reviewedAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "CardReviews",
          "reviewedAt"
        ]
      },
      "ConsecutiveDaysDto": {
        "type": "object",
        "properties": {
          "consecutiveDays": {
            "type": "number",
            "description": "Number of consecutive days the deck has been studied",
            "example": 7
          },
          "streakStartDate": {
            "type": "string",
            "description": "Date of the current streak start",
            "example": "2025-11-17T00:00:00.000Z",
            "nullable": true
          },
          "lastStudyDate": {
            "type": "string",
            "description": "Date of the most recent study session",
            "example": "2025-11-24T00:00:00.000Z",
            "nullable": true
          }
        },
        "required": [
          "consecutiveDays",
          "streakStartDate",
          "lastStudyDate"
        ]
      }
    }
  }
